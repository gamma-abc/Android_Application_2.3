<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--消息页头部导航栏-->
    <RelativeLayout
        android:id="@+id/message_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/message_navigation_text"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="消息"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif"/>
        <TextView
            android:id="@+id/message_navigation_text_read_messages"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="全部已读"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#EE7621"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/view8" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BEBEBE"
            android:layout_below="@id/message_navigation_text"
            android:id="@+id/view8">
        </View>
    </RelativeLayout>

    <!--谁看过我-->
    <LinearLayout
        android:id="@+id/me_two"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/me_navigation"
        android:layout_margin="15dp"
        android:background="@drawable/bg_corner"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/job_collect"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:clickable="true"
            android:onClick="onClick"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/job_collect_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/watch_me_48" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/who_see_me_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:gravity="left|center"
                    android:text="谁看过我"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/who_see_me_button"
                    android:background="#BEBEBE">

                </View>
            </RelativeLayout>

        </LinearLayout>


        <!--人事往来-->
        <LinearLayout
            android:id="@+id/hr_letter"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hr_letter_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/hr_letter_48" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/hr_letter_button"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:gravity="left|center"
                    android:text="人事来信"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/hr_letter_button"
                    android:background="#BEBEBE">

                </View>
            </RelativeLayout>

        </LinearLayout>

        <!--职场Live-->
        <LinearLayout
            android:id="@+id/live"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/live_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/live_48" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/live_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:gravity="left|center"
                    android:text="职场Live"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/live_button"
                    android:background="#BEBEBE">

                </View>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>