<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <!--顶部部分-->
        <LinearLayout
            android:id="@+id/saoyisao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.15"
            android:layout_marginLeft="5dp"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/main_scan" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/saoyisao"
            android:layout_marginLeft="10dp"
            >
            <EditText
                android:id="@+id/search_edittext"
                android:drawableLeft="@drawable/icons8_search_24"
                android:drawablePadding="2dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:maxLines="1"
                android:background="@drawable/bg_corner_gray"
                android:hint="搜索全文/职位名"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <ToggleButton
                android:layout_gravity="right|center"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textOff="中文"
                android:background="@null"
                android:textOn="ເມືອງລາວ"/>
        </LinearLayout>
    </LinearLayout>
    <!--<include-->
        <!--android:id="@+id/top"-->
        <!--layout="@layout/search"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <!--图片轮播-->
            <RelativeLayout
                android:id="@+id/photo_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                >
                <ImageButton
                    android:id="@+id/imageButton_image_first"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@drawable/facephoto"
                    />
            </RelativeLayout>
            <!--控件部分-->
            <LinearLayout
                android:layout_below="@+id/photo_cycle"
                android:id="@+id/button_Top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/colorWhite"
                >
                <!--我要找工作-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/button_JobSearch"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/needwork"
                        android:gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="我要找工作"
                        android:textSize="10sp"
                        />
                </LinearLayout>
                <!--我要招聘-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <Button
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/i_want_recruit_button"
                        android:layout_gravity="center"
                        android:background="@drawable/recruitment"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="我要招聘"
                        android:textSize="10sp"
                        />
                </LinearLayout>
                <!--我要投资-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:id="@+id/button_Application_Record"
                        android:layout_toRightOf="@+id/button_WhoSawMe"
                        android:background="@drawable/company"
                        />
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我要投资"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="10sp"
                        />
                </LinearLayout>
                <!--我要交友-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:id="@+id/button_Campus_Recruiting"
                        android:layout_toRightOf="@+id/button_Application_Record"
                        android:background="@drawable/makefriend"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="我要交友"
                        android:textSize="10sp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/button_Top"
                android:id="@+id/text_flag"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="- 为你精选好的职位 -"
                    android:textColor="@color/colorOrangeDeep"
                    />

            </LinearLayout>

            <!--work1-->
            <RelativeLayout
                android:layout_below="@+id/text_flag"
                android:id="@+id/work_1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff">
                    <Button
                        android:id="@+id/job_name1_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="left"
                        android:text="Java开发工程师"
                        android:textSize="17sp"
                        android:background="@null"
                        android:textColor="#000000"
                        android:layout_above="@+id/view9"
                        android:layout_alignParentEnd="true" />
                    <TextView
                        android:id="@+id/salary_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="1-1.5万/月"
                        android:textSize="17dip"
                        android:textColor="@color/colorOrange"
                        android:layout_alignParentTop="true"
                        android:layout_alignTop="@+id/view9"
                        android:layout_alignParentEnd="true" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="深圳市宜居云科技有限公司"
                        android:textColor="#000000"
                        android:layout_alignParentBottom="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:padding="10dp"
                        android:gravity="center|right"
                        android:text="深圳-南山区"
                        android:textSize="10dip"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true" />
                <!--</LinearLayout>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#BEBEBE"
                    android:id="@+id/view9"
                    android:layout_alignParentBottom="true">
                </View>
            </RelativeLayout>
            <!--work2-->
            <RelativeLayout
                android:layout_below="@+id/work_1"
                android:id="@+id/work_2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff">
                <Button
                    android:id="@+id/job_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"
                    android:paddingTop="10dp"
                    android:text="UI设计师"
                    android:textSize="17sp"
                    android:background="@null"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/salary_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="1-1.5万/月"
                    android:textSize="17dip"
                    android:textColor="@color/colorOrange"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="深圳前海爱海购电子商务有限公司"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:gravity="center|right"
                    android:text="深圳-南山区"
                    android:textSize="10dip"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />
                <!--</LinearLayout>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#BEBEBE"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <!--work3-->
            <RelativeLayout
                android:layout_below="@+id/work_2"
                android:id="@+id/work_3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">
                <Button
                    android:id="@+id/job_name3_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="高级JAVA开发经理"
                    android:textSize="17sp"
                    android:background="@null"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/salary_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="2.5-5万/月"
                    android:textSize="17dip"
                    android:textColor="@color/colorOrange"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="深圳市云来网络科技有限公司"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:gravity="center|right"
                    android:text="深圳-南山区"
                    android:textSize="10dip"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />
                <!--</LinearLayout>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#BEBEBE"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <!--work4-->
            <RelativeLayout
                android:layout_below="@+id/work_3"
                android:id="@+id/work_4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">
                <Button
                    android:id="@+id/job_name4_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="销售经理（金融）"
                    android:textSize="17sp"
                    android:background="@null"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/salary_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="2.5-3万/月"
                    android:textSize="17dip"
                    android:textColor="@color/colorOrange"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="深圳市聚橙网络技术有限公司"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:gravity="center|right"
                    android:text="深圳-南山区"
                    android:textSize="10dip"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />
                <!--</LinearLayout>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#BEBEBE"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <!--分割-->
            <View
                android:id="@+id/flag_buttom"
                android:layout_below="@+id/work_4"
                android:layout_marginBottom="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </View>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>