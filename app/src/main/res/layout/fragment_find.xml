<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/find_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:id="@+id/find_navigation_text"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="选择发布类型"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/find_navigation_text_read_messages"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="我的发布"
            android:textSize="14sp"
            android:textColor="#778899"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/view8" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BEBEBE"
            android:layout_below="@id/find_navigation_text"
            android:id="@+id/view8">
        </View>
    </RelativeLayout>

    <!--发布_全职招聘-->
    <LinearLayout
        android:id="@+id/me_two"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:background="@drawable/bg_corner">

        <LinearLayout
            android:id="@+id/job_collect"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:focusableInTouchMode="true"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/job_collect_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/job_full_48"
                android:paddingLeft="5dp"
                />
            <RelativeLayout
                android:id="@+id/btn_find"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/job_collect_button"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="全职招聘"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#BEBEBE"
                    android:layout_below="@id/job_collect_button"
                    android:layout_alignStart="@+id/job_collect_button">
                </View>
            </RelativeLayout>

        </LinearLayout>


        <!--兼职招聘-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/hr_letter"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/hr_letter_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/job_part_time_48"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/hr_letter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="兼职招聘"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#BEBEBE"
                    android:layout_below="@id/hr_letter_text">
                </View>
            </RelativeLayout>

        </LinearLayout>

        <!--房产-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/live"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/live_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/apartment_48"
                android:paddingLeft="5dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/live_text"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="房产"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#BEBEBE"
                    android:layout_below="@id/live_text"
                    >
                </View>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>