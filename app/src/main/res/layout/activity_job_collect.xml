<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.junk.android_application_23.fragment.JobCollectActivity">
    <RelativeLayout
        android:id="@+id/me_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="1">
        <Button
            android:id="@+id/job_collect_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/common_title_fanhui_orange"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/who_see_me"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="全职招聘"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/who_see_me"
            android:layout_gravity="bottom"
            android:background="#BEBEBE">
        </View>

    </RelativeLayout>
</LinearLayout>
