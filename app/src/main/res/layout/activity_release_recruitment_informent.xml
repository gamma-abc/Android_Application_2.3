<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.junk.android_application_23.ReleaseRecruitmentInformentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:weightSum="1">
        <Button
            android:id="@+id/release_recruitment_iforment_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/common_title_fanhui_orange"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/who_see_me"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="发布招聘信息"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/who_see_me"
            android:layout_gravity="bottom"
            android:background="#BEBEBE">
        </View>


    </RelativeLayout>

    <!--搜索框-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorGray"
        >

        <EditText
            android:id="@+id/search_edittext"
            android:drawableLeft="@drawable/icons8_search_24"
            android:drawablePadding="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:maxLines="1"
            android:background="@drawable/bg_corner"
            android:hint="输入您要招聘的职位名称，如“销售”"
            android:layout_weight="5.60" />

    </LinearLayout>



</LinearLayout>
