<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.junk.android_application_23.IWangtRecuritSelectTypeActivity">
    <RelativeLayout
        android:id="@+id/me_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="1">
        <Button
            android:id="@+id/find_home_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/common_title_fanhui_orange"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/who_see_me"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="选择发布的类型"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/who_see_me"
            android:layout_gravity="bottom"
            android:background="#BEBEBE">
        </View>

    </RelativeLayout>
    <!--全职招聘-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorWhite">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/i_want_recruit_full_job">
            <Button
                android:id="@+id/i_want_recruit_full_job_button"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="5dp"
                android:text="全职招聘"
                android:paddingLeft="30dp"
                android:gravity="left|center"
                android:textSize="15sp"
                android:layout_toLeftOf="@+id/job_search_address_image"
                android:background="@null"
                />
            <View
                android:id="@+id/i_want_recruit_full_job_view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#BEBEBE"
                android:layout_below="@id/i_want_recruit_full_job_button"
                >
            </View>
            <ImageView
                android:id="@+id/job_search_address_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="2dp"
                android:src="@drawable/to_right"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/i_want_recruit_full_job_view" />
        </RelativeLayout>
        <!--兼职招聘-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/i_want_recruit_parttime_job"
            android:layout_below="@+id/i_want_recruit_full_job">
            <Button
                android:id="@+id/i_want_recruit_parttime_job_button"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="5dp"
                android:text="兼职招聘"
                android:paddingLeft="30dp"
                android:gravity="left|center"
                android:textSize="15sp"
                android:background="@null"
                />
            <View
                android:id="@+id/i_want_recruit_parttime_job_view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#BEBEBE"
                android:layout_below="@id/i_want_recruit_parttime_job_button"
                >
            </View>
            <ImageView
                android:id="@+id/i_want_recruit_part_time_job_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="2dp"
                android:src="@drawable/to_right"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/i_want_recruit_parttime_job_view" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
